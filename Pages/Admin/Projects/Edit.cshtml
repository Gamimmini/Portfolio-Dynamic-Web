    <link rel="stylesheet" type="text/css" href="~/assets/css/themify-icons.css" asp-append-version="true">

    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.css" asp-append-version="true">

    <link rel="stylesheet" type="text/css" href="~/assets/vendor/animate/animate.css" asp-append-version="true">

    <link rel="stylesheet" type="text/css" href="~/assets/vendor/owl-carousel/owl.carousel.css" asp-append-version="true">

