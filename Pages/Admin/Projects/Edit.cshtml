    <link rel="stylesheet" type="text/css" href="~/assets/css/virtual.css" asp-append-version="true">

    <link rel="stylesheet" type="text/css" href="~/assets/css/minibar.virtual.css" asp-append-version="true">

</head>
<body class="theme-red">
    <!-- Back to top button -->
    <div class="btn-back_to_top">
        <span class="ti-arrow-up"></span>
    </div>

    <!-- Setting button -->
    <div class="config">
        <div class="template-config">
            <!-- Settings -->
            <div class="d-block">
                <button class="btn btn-fab btn-sm" id="sideel" title="Settings"><span class="ti-settings"></span></button>
            </div>
            <!-- Puschase -->
            <div class="d-block">
                <a href="https://www.topcv.vn/xem-cv/VldUB1UCUg8ACwBeD1QMU1wABFRdVABXV1pTBgc713" class="btn btn-fab btn-sm" title="Download my CV" data-toggle="tooltip" data-placement="left"><span class="ti-download"></span></a>
            </div>
            <!-- Help -->
            <div class="d-block">
                <a href="#" class="btn btn-fab btn-sm" title="Help" data-toggle="tooltip" data-placement="left"><span class="ti-help"></span></a>
            </div>
        </div>
        <div class="set-menu">
            <p>Select Color</p>
            <div class="color-bar" data-toggle="selected">
                <span class="color-item bg-theme-red selected" data-class="theme-red"></span>
                <span class="color-item bg-theme-blue" data-class="theme-blue"></span>
                <span class="color-item bg-theme-green" data-class="theme-green"></span>
                <span class="color-item bg-theme-orange" data-class="theme-orange"></span>
                <span class="color-item bg-theme-purple" data-class="theme-purple"></span>
            </div>
        </div>
    </div>

    <div class="topbar-nav fixed-top">
        <div class="brand">
            <img src="../assets/favicon.ico" alt="" width="30" height="30">
        </div>
        <h3 class="ml-1">Folio</h3>
        <button class="btn-fab toggle-menu mr-3"><span class="ti-menu"></span></button>
    </div>
    <!-- Mini bar -->
    <div class="minibar">
        <div class="header">
            <div class="brand">
            </div>
        </div>
        <div class="content">
            <ul class="main-menu">
                <li class="menu-item active">
                    <a asp-page="Index" class="menu-link">
                        <span class="icon ti-arrow-left"></span>
                        <span class="caption">Back</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="footer">
            <div class="social-menu">
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-8 mx-auto rounded border p-3">
            <h2 class="text-center mb-5"> Edit Project</h2>

            @if (Model.errorMessage.Length > 0)
            {
                <div class='alert alert-warning alert-dismissible fade show' role="alert">
                    <strong> @Model.errorMessage </strong>
                </div>
            }
            else if (Model.successMessage.Length > 0)
            {
                <div class='alert alert-success alert-dismissible fade show' role="alert">
                    <strong> @Model.successMessage </strong>
                </div>
            }


            <form method="post" enctype="multipart/form-data">

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">ID</label>
                    <div class="col-sm-8">
                        <input readonly class="form-control-plaintext" value="@Model.Project.Id" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="ProjectDto.Name">
                        <span asp-validation-for="ProjectDto.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Description</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="ProjectDto.Description">
                        <span asp-validation-for="ProjectDto.Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Category</label>
                    <div class="col-sm-8">
                        <select class="form-control" asp-for="ProjectDto.Category">
                            <option value='Mobile'>Mobile</option>
                            <option value='WebGL'>WebGL</option>
                            <option value='Window'>Window</option>
                        </select>
                    </div>
                </div>


                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Link Review</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="ProjectDto.LinkReview">
                        <span asp-validation-for="ProjectDto.LinkReview" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Link Play</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="ProjectDto.LinkPlay">
                        <span asp-validation-for="ProjectDto.LinkPlay" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Is Highlighted</label>
                    <div class="col-sm-8">
                        <div class="form-check form-switch form-check-xl">
                            <input class="form-check-input" type="checkbox" asp-for="ProjectDto.IsHighlighted">
                            <span asp-validation-for="ProjectDto.IsHighlighted" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Image</label>
                    <div class="col-sm-8">
                        <img src="/Project/@Model.Project.ImageFileName" width="150" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Image</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="ProjectDto.ImageFile">
                        <span asp-validation-for="ProjectDto.ImageFile" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="offset-sm-4 col-sm-4 d-grid">
                        <button type="submit" class="btn btn-theme mt-3 wow fadeInUp ml-1">Submit</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <!-- Footer -->
    <div class="vg-footer" id="contact">
        <h1 class="text-center">Porfolio - Personal Profile</h1>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 py-3">
                    <div class="footer-info">
                        <p>Where to find me</p>
                        <hr class="divider">
                        <p class="fs-large fg-white">K148/37 Lý Tự Trọng, Thạch Thang, Hải Châu, Đà Nẵng 550000, Việt Nam</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 py-3">
                    <div class="float-lg-right">
                        <p>Follow me</p>
                        <hr class="divider">
                        <ul class="list-unstyled">
                            <li><a href="https://www.instagram.com/hnt89031/" target="_blank">Instagram</a></li>
                            <li><a href="https://www.facebook.com/GamiPrimo/" target="_blank">Facebook</a></li>
