}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Porfolio - Personal Profile</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/favicon.ico" asp-append-version="true">

    <link rel="stylesheet" type="text/css" href="~/assets/css/themify-icons.css" asp-append-version="true">

    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.css" asp-append-version="true">

    <link rel="stylesheet" type="text/css" href="~/assets/vendor/animate/animate.css" asp-append-version="true">

    <link rel="stylesheet" type="text/css" href="~/assets/vendor/owl-carousel/owl.carousel.css" asp-append-version="true">

    <link rel="stylesheet" type="text/css" href="~/assets/vendor/perfect-scrollbar/css/perfect-scrollbar.css" asp-append-version="true">

    <link rel="stylesheet" type="text/css" href="~/assets/vendor/nice-select/css/nice-select.css" asp-append-version="true">

    <link rel="stylesheet" type="text/css" href="~/assets/vendor/fancybox/css/jquery.fancybox.min.css" asp-append-version="true">

    <link rel="stylesheet" type="text/css" href="~/assets/css/virtual.css" asp-append-version="true">

    <link rel="stylesheet" type="text/css" href="~/assets/css/minibar.virtual.css" asp-append-version="true">

    <script>
        function confirmLogout() {
            var confirmLogout = confirm("You will be logged out of the Admin account. Are you sure you want to continue?");
            return confirmLogout;
        }
    </script>
</head>
<body class="theme-red">
    <!-- Back to top button -->
    <div class="btn-back_to_top">
        <span class="ti-arrow-up"></span>
    </div>

    <!-- Setting button -->
    <div class="config">
        <div class="template-config">
            <!-- Settings -->
            <div class="d-block">
                <button class="btn btn-fab btn-sm" id="sideel" title="Settings"><span class="ti-settings"></span></button>
            </div>
            <!-- Puschase -->
            <div class="d-block">
                <a href="https://www.topcv.vn/xem-cv/VldUB1UCUg8ACwBeD1QMU1wABFRdVABXV1pTBgc713" class="btn btn-fab btn-sm" title="Download my CV" data-toggle="tooltip" data-placement="left"><span class="ti-download"></span></a>
            </div>
            <!-- Help -->
            <div class="d-block">
                <a href="#" class="btn btn-fab btn-sm" title="Help" data-toggle="tooltip" data-placement="left"><span class="ti-help"></span></a>
            </div>
        </div>
        <div class="set-menu">
            <p>Select Color</p>
            <div class="color-bar" data-toggle="selected">
                <span class="color-item bg-theme-red selected" data-class="theme-red"></span>
                <span class="color-item bg-theme-blue" data-class="theme-blue"></span>
                <span class="color-item bg-theme-green" data-class="theme-green"></span>
                <span class="color-item bg-theme-orange" data-class="theme-orange"></span>
                <span class="color-item bg-theme-purple" data-class="theme-purple"></span>
            </div>
        </div>
    </div>

    <div class="topbar-nav fixed-top">
        <div class="brand">
            <img src="../assets/favicon.ico" alt="" width="30" height="30">
        </div>
        <h3 class="ml-1">Folio</h3>
        <button class="btn-fab toggle-menu mr-3"><span class="ti-menu"></span></button>
    </div>
    <!-- Mini bar -->
    <div class="minibar">
        <div class="header">
            <div class="brand">
            </div>
        </div>
        <div class="content">
            <ul class="main-menu">
                <li class="menu-item active">
                    <a asp-page="/index" class="menu-link" onclick="return confirmLogout();">
                        <span class="icon ti-arrow-left"></span>
                        <span class="caption">Back</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="footer">
            <div class="social-menu">
            </div>
        </div>
    </div>

    <!-- Main Wrapper -->
    <div class="vg-main-wrapper">
        <div class="vg-page page-blog">
            <div class="container">
                <h2 class="text-center mb-5"> List of Project </h2>

                <div class="row mb-5">
                    <div class="col">
                        <a class='btn btn-theme-outline' href='/Admin/Projects/Create'> New Project</a>
                    </div>
                    <div class="col">
                    </div>
                </div>
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Link Review</th>
                                <th>Link Play</th>
                                <th>Image</th>
                                <th colspan="3">Is Highlight</th>
                            </tr>
                        </thead>
                        @foreach (var project in Model.Projects)
                        {
                            <tbody>
                                <tr>
                                    <td>@project.Id</td>
                                    <td>@project.Name</td>
                                    <td>@project.Description</td>
                                    <td>@project.Category</td>
                                    <td style="max-width: 150px; overflow: hidden; text-overflow: ellipsis;">@project.LinkReview</td>
                                    <td style="max-width: 150px; overflow: hidden; text-overflow: ellipsis;">@project.LinkPlay</td>
                                    <td><img src="/Project/@project.ImageFileName" width="100"></td>
                                    <td>
                                    <td>
                                            @if (project.IsHighlighted)
                                            {
                                            <span style="display:inline-block;">&#10003;</span>
                                            }
                                            else
                                            {
                                            <span style="display:inline-block;">&#10007;</span>
                                            }
                                    </td>

                                   

                                    <td style="white-space:nowrap">
                                        <a class="btn btn-primary btn-sm" href="/Admin/Projects/Edit?id=@project.Id">Edit</a>
                                        <a class="btn btn-danger btn-sm" href="/Admin/Projects/Delete?id=@project.Id">Delete</a>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="vg-footer" id="contact">
            <h1 class="text-center">Porfolio - Personal Profile</h1>
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 py-3">
                        <div class="footer-info">
                            <p>Where to find me</p>
                            <hr class="divider">
                            <p class="fs-large fg-white">K148/37 Lý Tự Trọng, Thạch Thang, Hải Châu, Đà Nẵng 550000, Việt Nam</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 py-3">
                        <div class="float-lg-right">
                            <p>Follow me</p>
                            <hr class="divider">
                            <ul class="list-unstyled">
                                <li><a href="https://www.instagram.com/hnt89031/" target="_blank">Instagram</a></li>
                                <li><a href="https://www.facebook.com/GamiPrimo/" target="_blank">Facebook</a></li>
                                <li><a href="https://www.linkedin.com/in/nam-th%C3%A0nh-hu%E1%BB%B3nh-900631299/" target="_blank">LinkedIn</a></li>
                                <li><a href="https://www.youtube.com/channel/UC1px_P9DF3Yht5bMRFC-s7w" target="_blank">Youtube</a></li>
                            </ul>

                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 py-3">
                        <div class="float-lg-right">
                            <p>Contact me</p>
                            <hr class="divider">
                            <ul class="list-unstyled">
                                <li>hnthanh922@gmail.com</li>
                                <li>+84 911744992</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-3">
                    <div class="col-12">
                        <p class="text-center mb-0 mt-4">
                            Copyright &copy;2024. All rights reserved | This portfolio is crafted with <span class="ti-heart fg-theme-red"></span> by
                            <a href="https://www.facebook.com/GamiPrimo/" target="_blank">Huynh Nam Thanh || Gami Primo </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>  <!-- End footer -->
    </div> <!-- End main wrapper -->

    <script src="../assets/js/jquery-3.5.1.min.js"></script>

    <script src="../assets/js/bootstrap.bundle.min.js"></script>

    <script src="../assets/vendor/owl-carousel/owl.carousel.min.js"></script>

    <script src="../assets/vendor/perfect-scrollbar/js/perfect-scrollbar.js"></script>

    <script src="../assets/vendor/isotope/isotope.pkgd.min.js"></script>

    <script src="../assets/vendor/nice-select/js/jquery.nice-select.min.js"></script>

    <script src="../assets/vendor/fancybox/js/jquery.fancybox.min.js"></script>

    <script src="../assets/vendor/wow/wow.min.js"></script>

    <script src="../assets/vendor/animateNumber/jquery.animateNumber.min.js"></script>

    <script src="../assets/vendor/waypoints/jquery.waypoints.min.js"></script>

    <script src="../assets/js/google-maps.js"></script>

    <script src="../assets/js/minibar-virtual.js"></script>


</body>
</html>